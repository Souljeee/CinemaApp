<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cinema_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cinema_item_corner_radius"
    app:cardElevation="@dimen/cinema_item_elevation"
    android:layout_marginTop="@dimen/cinema_item_margin"
    android:layout_marginStart="@dimen/cinema_item_margin"
    android:layout_marginEnd="@dimen/cinema_item_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cinema_poster"
        android:layout_width="@dimen/cinema_item_image_width"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cinema_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cinema_item_name_text_view_height"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/cinema_item_text_view_text_size" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cinema_year"
                android:gravity="center"
                android:layout_width="@dimen/cinema_item_year_text_view_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/cinema_item_text_view_text_size"/>
            <TextView
                android:id="@+id/cinema_rating"
                android:gravity="center"
                android:layout_width="@dimen/cinema_item_rating_text_view_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/cinema_item_text_view_text_size"/>
        </LinearLayout>



    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>